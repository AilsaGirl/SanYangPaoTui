<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.circle.common.view.MyToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.circle.common.view.MyToolBar>
    <com.youth.banner.Banner
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        style="@style/baotui_banner"
        android:layout_below="@+id/toolbar"
        app:banner_default_image="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_below="@+id/ivBackground"
        android:orientation="vertical"
        android:background="@mipmap/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2e000000"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivGG"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/ivBackground"
                android:src="@mipmap/ic_launcher"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/hl_6x3"
                android:textSize="14dp"
                android:text="公告："
                />
            <com.liaocheng.suteng.myapplication.view.UPMarqueeView
                android:id="@+id/vf"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:autoStart="true"
                android:layout_toRightOf="@+id/ivGG"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/linFaHuo"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/sanyangtubiao"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/button_woyaofahuo"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linQiangDan"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/sanyangtubiao"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/button_woyaofahuo"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
