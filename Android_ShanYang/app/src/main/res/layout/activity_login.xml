<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/denglu_beijing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:textSize="28dp"
    android:textColor="@color/hl_6x3"
    android:layout_marginTop="70dp"
    android:textStyle="bold"
    android:text="欢迎登录"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvDuanXin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#E03D91"
            android:textSize="20dp"
            android:text="短信登录"
            />
        <TextView
            android:id="@+id/tvMiMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="20dp"
            android:text="密码登录"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/loginUserNameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <EditText
            android:drawablePadding="14dp"
            android:hint="请输入手机号"
            android:id="@+id/etName"
            android:textSize="14dp"
            android:inputType="phone"
            android:textColor="@color/hl_6x3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:singleLine="true"
            android:maxLength="11"
            android:text=""
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#535353"
            android:visibility="visible"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loginPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <EditText
            android:textSize="14dp"
            android:drawablePadding="15dp"
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:maxLength="20"
            android:hint="请输入密码"
            android:textColor="@color/hl_6x3"
            android:background="@null"
            android:layout_toLeftOf="@+id/tvGetYZM"
            android:text=""
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            />
        <TextView
            android:id="@+id/tvGetYZM"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_yzm_bg"
            android:textColor="@color/hl_6x3"
            android:textSize="16dp"
            android:text="获取在验证码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toLeftOf="@+id/tvGetYZM"
           android:layout_below="@+id/etPwd"
            android:background="#535353"/>
    </RelativeLayout>


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="登录"
        android:textColor="@color/hl_white"
        android:textSize="18dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/login_button_selector"/>

    <LinearLayout
        android:id="@+id/linZhuCe"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/hl_6x6"
            android:id="@+id/tvPPW"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号注册"
            android:textSize="14dp" />
        <TextView
            android:textColor="@color/hl_6x6"
            android:layout_marginLeft="25dp"
            android:id="@+id/tvFindPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="忘记密码"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="40dp"
            android:background="#535353"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/hl_6x3"
            android:text="第三方登录"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#535353"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/ivWeiXin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixin"
            android:layout_marginRight="50dp"
            />
        <ImageView
            android:id="@+id/ivQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qq"
            android:layout_marginRight="17dp"
            />

    </LinearLayout>

</LinearLayout>